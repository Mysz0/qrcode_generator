<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resetowanie hasła</title>
    <!-- Link to the CSS file -->
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="auth-form">
        <h2>Resetowanie hasła</h2>
        <form id="reset-password-form">
            <input type="hidden" id="reset-token" value="<%= token %>">
            <label for="password">Nowe hasło:</label>
            <input type="password" id="password" name="password" class="auth-input" required>
            <br>
            <label for="confirmPassword">Potwierdź nowe hasło:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="auth-input" required>
            <br>
            <button type="submit" class="auth-button">Resetuj hasło</button>
        </form>
    </div>
    <div id="errorBox"></div>
    <script>
        document.getElementById('reset-password-form').addEventListener('submit', async (e) => {
            e.preventDefault();

            const token = document.getElementById('reset-token').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            // Sprawdzenie długości hasła
            if (password.length < 8) {
                const errorBox = document.getElementById('errorBox');
                errorBox.textContent = 'Nowe hasło musi mieć co najmniej 8 znaków.';
                errorBox.style.display = 'block';
                errorBox.style.opacity = '1';
                setTimeout(() => {
                    errorBox.style.opacity = '0';
                }, 3000);
                return;
            }

            if (password !== confirmPassword) {
                const errorBox = document.getElementById('errorBox');
                errorBox.textContent = 'Hasła nie pasują do siebie!';
                errorBox.style.display = 'block';
                errorBox.style.opacity = '1';
                setTimeout(() => {
                    errorBox.style.opacity = '0';
                }, 3000);
                return;
            }

            try {
                const response = await fetch(`/api/users/resetPassword/${encodeURIComponent(token)}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ password, confirmPassword })
                });

                if (response.ok) {
                    alert('Hasło zostało zaktualizowane.');
                } else {
                    const error = await response.json();
                    const errorBox = document.getElementById('errorBox');
                    errorBox.textContent = 'Wystąpił błąd: ' + (error.message || 'Nieznany błąd');
                    errorBox.style.display = 'block';
                    errorBox.style.opacity = '1';
                    setTimeout(() => {
                        errorBox.style.opacity = '0';
                    }, 3000);
                }
            } catch (error) {
                const errorBox = document.getElementById('errorBox');
                errorBox.textContent = 'Wystąpił błąd: ' + error.message;
                errorBox.style.display = 'block';
                errorBox.style.opacity = '1';
                setTimeout(() => {
                    errorBox.style.opacity = '0';
                }, 3000);
            }
        });
    </script>
</body>
</html>
